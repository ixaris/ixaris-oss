<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <profiles>
        <profile>
            <id>protobuf-scsl-compile</id>
            <activation>
                <file>
                    <exists>src/main/resources</exists>
                </file>
                <property>
                    <name>!skipProtobuf</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.xolstice.maven.plugins</groupId>
                        <artifactId>protobuf-maven-plugin</artifactId>
                        <version>0.6.1</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <id>protoc-generate-sources</id>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                                <configuration>
                                    <protoSourceRoot>${project.basedir}/src/main/resources</protoSourceRoot>
                                    <protocArtifact>com.google.protobuf:protoc:@protobuf.version@:exe:${os.detected.classifier}</protocArtifact>
                                    <protocPlugins>
                                        <protocPlugin>
                                            <id>protoc-generate-validation-sources</id>
                                            <groupId>com.ixaris.oss</groupId>
                                            <artifactId>ix-commons-protobuf-validationcodegen</artifactId>
                                            <version>@project.version@</version>
                                            <mainClass>com.ixaris.commons.protobuf.validationcodegen.CodegenMain</mainClass>
                                        </protocPlugin>
                                        <protocPlugin>
                                            <id>protoc-generate-scsl-sources</id>
                                            <groupId>com.ixaris.oss</groupId>
                                            <artifactId>ix-commons-microservices-scslcodegen</artifactId>
                                            <version>@project.version@</version>
                                            <mainClass>com.ixaris.commons.microservices.scslcodegen.CodegenMain</mainClass>
                                            <args>
                                                <arg>${project.basedir}/src/main/resources</arg>
                                            </args>
                                        </protocPlugin>
                                    </protocPlugins>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.ixaris.oss</groupId>
                                <artifactId>ix-commons-protobuf-validationcodegen</artifactId>
                                <version>@project.version@</version>
                            </dependency>
                            <dependency>
                                <groupId>com.ixaris.oss</groupId>
                                <artifactId>ix-commons-microservices-scslcodegen</artifactId>
                                <version>@project.version@</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>protobuf-scsl-test-compile</id>
            <activation>
                <file>
                    <exists>src/test/resources</exists>
                </file>
                <property>
                    <name>!skipProtobuf</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.xolstice.maven.plugins</groupId>
                        <artifactId>protobuf-maven-plugin</artifactId>
                        <version>0.6.1</version>
                        <executions>
                            <execution>
                                <phase>generate-test-sources</phase>
                                <id>protoc-generate-test-sources</id>
                                <goals>
                                    <goal>test-compile</goal>
                                </goals>
                                <configuration>
                                    <protoTestSourceRoot>${project.basedir}/src/test/resources</protoTestSourceRoot>
                                    <protocArtifact>com.google.protobuf:protoc:@protobuf.version@:exe:${os.detected.classifier}</protocArtifact>
                                    <protocPlugins>
                                        <protocPlugin>
                                            <id>protoc-generate-test-validation-sources</id>
                                            <groupId>com.ixaris.oss</groupId>
                                            <artifactId>ix-commons-protobuf-validationcodegen</artifactId>
                                            <version>@project.version@</version>
                                            <mainClass>com.ixaris.commons.protobuf.validationcodegen.CodegenMain</mainClass>
                                        </protocPlugin>
                                        <protocPlugin>
                                            <id>protoc-generate-test-scsl-sources</id>
                                            <groupId>com.ixaris.oss</groupId>
                                            <artifactId>ix-commons-microservices-scslcodegen</artifactId>
                                            <version>@project.version@</version>
                                            <mainClass>com.ixaris.commons.microservices.scslcodegen.CodegenMain</mainClass>
                                            <args>
                                                <arg>${project.basedir}/src/test/resources</arg>
                                            </args>
                                        </protocPlugin>
                                    </protocPlugins>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.ixaris.oss</groupId>
                                <artifactId>ix-commons-protobuf-validationcodegen</artifactId>
                                <version>@project.version@</version>
                            </dependency>
                            <dependency>
                                <groupId>com.ixaris.oss</groupId>
                                <artifactId>ix-commons-microservices-scslcodegen</artifactId>
                                <version>@project.version@</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
